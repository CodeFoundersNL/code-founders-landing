---
import BlurLayout from './blur.astro';
const {content} = Astro.props;
---
<style>
img {
  display: block;
  max-width: 100%;
  aspect-ratio: 16 / 9;
  object-fit: cover;
}

h1 {
  font-size: 2rem;
  line-height: 3rem;
  text-align: center;
  margin: 3rem 0;
  overflow-wrap: break-word;
}

.subtitle {
  text-align: center;
  margin: 3rem 0;
}
</style>
<BlurLayout>
<!-- styles for the markdown content which is autogenerated -->
<link rel="stylesheet" href="/style/dienst.css" />
<img alt={content.hero_alt} src={content.hero} />
<h1>{content.heading}</h1>
<p class="subtitle">{content.subtitle}</p>
<slot />
</BlurLayout>
