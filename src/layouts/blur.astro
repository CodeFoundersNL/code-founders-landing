---
import BaseLayout from './base.astro';
const {heading, subtitle} = Astro.props;
---
<style>
  .content-wrapper {
    position: relative;
  }

  .content-wrapper::before {
    content: '';
    position: absolute;
    width: min(200%, 1600px);
    height: 550px;
    border-radius: 50%;
    opacity: 0.6;
    background: linear-gradient( var(--blur-top-from) 50%, var(--blur-top-to) 50% );
    filter: blur(225px);
    left: 33%;
  }

  .content-wrapper::after {
    content: '';
    position: absolute;
    width: min(200%, 1600px);
    height: 550px;
    border-radius: 50%;
    bottom: 0;
    opacity: 0.5;
    background: linear-gradient( var(--blur-bottom-from) 50%, var(--blur-bottom-to) 50% );
    filter: blur(225px);
    right: 33%;
  }

  .relative-wrapper {
    position: relative;
    z-index: 1;
    padding: 0 2rem;
  }

  h1 {
    text-align: center;
    font-size: 3rem;
    line-height: 4rem;
    padding: 10rem 1.5rem 5rem 1.5rem;
  }

  .subtitle {
    font-size: 1rem;
    line-height: 1.75rem;
    text-align: center;
    max-width: 60ch;
    margin: 0 auto 5rem auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media (min-width: 601px) {
    h1 {
      font-size: 3rem;
      line-height: 3rem;
    }

    .subtitle {
      font-size: 1.25rem;
      line-height: 2rem;
    }
  }
</style>
<BaseLayout>
<div class="content-wrapper">
  <div class="relative-wrapper">
    {heading ? <h1>{heading}</h1> : ''}
    {subtitle ? <p class="subtitle">{subtitle}</p> : ''}
    <slot />
  </div>
</div>
</BaseLayout>
